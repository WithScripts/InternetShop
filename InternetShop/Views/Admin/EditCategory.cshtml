@model CategoryForCreationDto
<div class="panel">
    <div>
        <h1>Редактирование категории: @Model.Title</h1>
    </div>
    @using (Html.BeginForm())
    {
        <div class="panel-body">
            @Html.EditorForModel()
        </div>
        <div class="panel-footer">
            <input type="submit" value="Редактировать" />
            @Html.ActionLink("Отмена", "Index")
        </div>
    }
</div>
